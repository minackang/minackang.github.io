<script>
  // Import some functions from the other file
  import { setTheme, getTheme, Theme } from "../helpers/theme";

  // On first load, update the users theme
  const theme = getTheme();
  setTheme(theme);

  // Find the light mode button in the HTML
  const lightButtons = document.querySelectorAll("[data-light-mode-button]");
  // Add a 'listener' for when someone clicks on it
  // When they do, run the following code: set the theme to light
  lightButtons.forEach((button) =>
    button.addEventListener("click", () => {
      setTheme("light");
    })
  );

  // Ditto for dark mode button
  const darkButtons = document.querySelectorAll("[data-dark-mode-button]");
  darkButtons.forEach((button) =>
    button.addEventListener("click", () => {
      setTheme("dark");
    })
  );
</script>
<script>
  // Find burger button in the HTML
  const burgerButton = document.getElementById("burger-button");
  burgerButton?.addEventListener("click", () => {
    // This block with run when the burger is clicked on

    // This finds the burger button, adds the hidden class to it
    const burgerButton = document.getElementById("burger-button");
    burgerButton?.classList.add("hidden");
    burgerButton?.classList.remove("flex");

    // This finds the burger menu, removes the hidden class to it
    const menu = document.getElementById("burger-menu");
    menu?.classList.add("flex");
    menu?.classList.remove("hidden");
  });

  const closeButton = document.getElementById("burger-close");
  closeButton?.addEventListener("click", () => {
    const burgerButton = document.getElementById("burger-button");
    burgerButton?.classList.add("flex");
    burgerButton?.classList.remove("hidden");

    const menu = document.getElementById("burger-menu");
    menu?.classList.add("hidden");
    menu?.classList.remove("flex");
  });
</script>

