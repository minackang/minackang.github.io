<script>
  // Import some functions from the other file
  import { setTheme, getTheme, Theme } from "../helpers/theme";

  // On first load, update the users theme
  const theme = getTheme();
  setTheme(theme);

  // Find the light mode button in the HTML
  const lightButtons = document.querySelectorAll("[data-light-mode-button]");
  // Add a 'listener' for when someone clicks on it
  // When they do, run the following code: set the theme to light
  lightButtons.forEach((button) =>
    button.addEventListener("click", () => {
      setTheme("light");
    })
  );

  // Ditto for dark mode button
  const darkButtons = document.querySelectorAll("[data-dark-mode-button]");
  darkButtons.forEach((button) =>
    button.addEventListener("click", () => {
      setTheme("dark");
    })
  );
</script>
